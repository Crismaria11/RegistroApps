<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ForgotPasswordActivity"
        android:background="@drawable/ic_launcher_background">

    <ImageView
            android:layout_width="376dp"
            android:layout_height="212dp"
            android:id="@+id/imageView"
            android:src="@drawable/ic_lisp1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.031"/>


    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="406dp"
            android:layout_height="42dp"
            android:indeterminate="true"
            android:visibility="gone"
            android:id="@+id/progressBar2" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginBottom="127dp"
            app:layout_constraintBottom_toTopOf="@+id/txtCorreo" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="3dp" android:layout_marginStart="3dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="2dp" android:layout_marginRight="2dp"/>

    <EditText android:layout_width="224dp"
              android:layout_height="wrap_content"
              android:inputType="textPersonName"
              android:hint="Correo Electronico"
              android:ems="10"
              android:id="@+id/txtCorreo" android:layout_marginBottom="8dp"
              app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
              android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginRight="8dp" android:layout_marginStart="8dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
              app:layout_constraintHorizontal_bias="0.175" app:layout_constraintVertical_bias="0.38"/>

    <Button
            android:layout_height="wrap_content"
            android:onClick="send"
            android:text="Enviar Password" android:layout_marginTop="8dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.566" android:layout_width="210dp"/>

</android.support.constraint.ConstraintLayout>