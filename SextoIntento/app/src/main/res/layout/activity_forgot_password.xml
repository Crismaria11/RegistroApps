<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ForgotPasswordActivity">
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="406dp"
            android:layout_height="42dp"
            android:indeterminate="true"
            android:visibility="gone"
            android:id="@+id/progressBar2" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginBottom="127dp"
            app:layout_constraintBottom_toTopOf="@+id/txtCorreo" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="3dp" android:layout_marginStart="3dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="2dp" android:layout_marginRight="2dp"/>
    
    <EditText android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:inputType="textPersonName"
              android:text="Nombre"
              android:id="@+id/txtCorreo"/>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="send"
            android:text="Enviar Password"/>

</android.support.constraint.ConstraintLayout>